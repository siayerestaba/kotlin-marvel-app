<resources>
    <style name="MarvelTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="emptylist">
        <item name="android:textSize">@dimen/text_40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="superheroe_name">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="superheroe_modified">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_margin">@dimen/margin_5dp</item>
    </style>

    <style name="superheroe_description">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
    </style>
</resources>
